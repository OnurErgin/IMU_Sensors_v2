<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.onur.IMU_Sensors_v2.MainActivity">

    <TextView
        android:id="@+id/tv_sensor_event_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Sensor Events"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Switch
        android:id="@+id/sensor_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:text="Sensors"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/tv_sensor_readings2"
        android:layout_width="326dp"
        android:layout_height="99dp"
        android:layout_marginTop="107dp"
        android:background="?attr/colorControlHighlight"
        android:ems="10"
        android:enabled="false"
        android:inputType="textMultiLine"
        android:text="Sensor Readings:"
        android:verticalScrollbarPosition="right"
        app:layout_constraintTop_toBottomOf="@+id/sensor_switch"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/tv_sensor_readings3"
        android:layout_width="326dp"
        android:layout_height="99dp"
        android:layout_marginTop="206dp"
        android:background="?attr/colorControlHighlight"
        android:ems="10"
        android:enabled="false"
        android:inputType="textMultiLine"
        android:text="Sensor Readings:"
        android:verticalScrollbarPosition="right"
        app:layout_constraintTop_toBottomOf="@+id/sensor_switch"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/tv_sensor_readings1"
        android:layout_width="326dp"
        android:layout_height="99dp"
        android:layout_marginTop="8dp"
        android:background="?attr/colorControlHighlight"
        android:ems="10"
        android:enabled="false"
        android:inputType="textMultiLine"
        android:text="Sensor Readings:"
        android:verticalScrollbarPosition="right"
        app:layout_constraintTop_toBottomOf="@+id/sensor_switch"
        tools:layout_editor_absoluteX="15dp" />

    <Spinner
        android:id="@+id/speedSpinner"
        android:layout_width="117dp"
        android:layout_height="22dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_sensor_readings3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_sensor_readings3" />

    <Button
        android:id="@+id/button_broker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Broker Addr"
        app:layout_constraintEnd_toEndOf="@+id/tv_sensor_readings3"
        app:layout_constraintTop_toBottomOf="@+id/tv_sensor_readings3" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Mqtt:"
        android:textAlignment="viewEnd"
        app:layout_constraintBottom_toBottomOf="@+id/button_broker"
        app:layout_constraintEnd_toStartOf="@+id/button_broker" />

    <CheckBox
        android:id="@+id/mqttCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:enabled="false"
        app:layout_constraintStart_toEndOf="@+id/button_broker"
        app:layout_constraintTop_toTopOf="@+id/button_broker" />

</android.support.constraint.ConstraintLayout>
